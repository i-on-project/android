<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment"
    android:padding="@dimen/fragments_padding_20"
    >

    <Button
        android:id="@+id/button_home_programmes"
        android:text="@string/title_programmes"
        android:drawableEnd="@drawable/ic_school_white_24"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_home_calendar">
    </Button>

    <Button
        android:id="@+id/button_home_calendar"
        android:text="@string/title_calendar"
        android:drawableEnd="@drawable/ic_calendar_today_white_24"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/button_home_programmes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>