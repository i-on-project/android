<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment"
    android:padding="@dimen/fragment_padding"
    >

    <Button
        android:id="@+id/courses_button"
        android:text="@string/title_courses"
        android:drawableEnd="@drawable/ic_baseline_school_24_white_"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/calendar_button"
        >
    </Button>

    <Button
        android:id="@+id/calendar_button"
        android:text="@string/title_calendar"
        android:drawableEnd="@drawable/ic_baseline_calendar_today_white_24"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/courses_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>