<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment"
    android:padding="@dimen/fragments_padding_20"
    android:id="@+id/fragment_home"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/button_home_programmes"
        android:text="@string/title_programmes"
        android:drawableEnd="@drawable/ic_school_white_24"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    </Button>

    <Button
        android:id="@+id/button_home_calendar"
        android:text="@string/title_calendar"
        android:drawableEnd="@drawable/ic_calendar_today_white_24dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    </Button>

    <Button
        android:id="@+id/button_home_settings"
        android:text="@string/title_settings"
        android:drawableEnd="@drawable/ic_settings_white_24"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    </Button>

</LinearLayout>