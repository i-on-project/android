<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalog_timetable_class_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_transparent"
        android:elevation="@dimen/all_sections_3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/all_list_item_padding_20"
        android:paddingTop="@dimen/sections_padding_8"
        android:paddingRight="@dimen/all_list_item_padding_20"
        android:paddingBottom="@dimen/sections_padding_8"
        android:layout_marginBottom="@dimen/fragments_padding_10"
        android:text="ClassName"
        android:textColor="@android:color/white"
        android:textSize="@dimen/all_text_18" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catalog_timetable_section_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fragments_padding_10"
        android:layout_marginBottom="@dimen/fragments_padding_10"
        android:visibility="gone"
        tools:listitem="@layout/catalog_timetable_section_item" />

</LinearLayout>